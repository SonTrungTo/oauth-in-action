{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["react", "react-dom"]
  },
  "include": [
    "./source/client/**/*",
    "./source/shared/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
